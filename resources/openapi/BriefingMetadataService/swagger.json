{
  "openapi": "3.1.0",
  "info": {
    "title": "BriefingMetadataService",
    "description": "Service providing briefing metadata",
    "version": "0.0.1"
  },
  "paths": {
    "/asset-ids": {
      "post": {
        "summary": "Responds with briefing metadata for requested briefing IDs",
        "description": "Responds with briefing metadata for requested briefing IDs",
        "operationId": "fetchBriefingMetadata",
        "requestBody": {
          "description": "Briefing IDs",
          "content": {
            "application/json": {
              "schema": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "Successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/BriefingMetadata"
                  }
                }
              }
            }
          },
          "400": {
            "description": "Invalid input"
          },
          "422": {
            "description": "Validation exception"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "BriefingMetadata": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "createdBy": {
            "type": "string"
          },
          "createdDate": {
            "type": "string",
            "format": "date"
          }
        }
      }
    }
  }
}